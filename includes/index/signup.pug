.triangle#sign-up-section: .container: .row
        .col-sm-12(class="text-center")
            if SIGN_UP_STATE === SIGN_UP_OPEN
                h5.
                    Sign-ups are now open for this year's AUHack!#[br]
                    Sign up as soon as possible for a better chance of being given a spot!
                a(href=SIGN_UP_LINK class="btn btn-lg btn-secondary" role="button") Register your spot now!
            else if SIGN_UP_STATE === SIGN_UP_OPENING
                if SIGN_UP_START_DATE
                    h5 Sign-ups for this year's AUHack will open #{SIGN_UP_START_DATE}!
                else
                    h5 Sign-ups are not yet open for this year's AUHack! Stay tuned!
            else if SIGN_UP_STATE === SIGN_UP_CLOSED
                h5 Sign-ups for this year's AUHack have closed.
            else if SIGN_UP_STATE === WAITING_LIST
                h5.
                    Sign-ups for this year's AUHack have closed, but you
                    can still join the waiting list!
                a(href=WAITING_LIST_LINK class="btn btn-lg btn-secondary" role="button") Apply for waiting list