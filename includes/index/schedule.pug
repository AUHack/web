mixin day(day_name, ...rows)
  .row: .col-sm-12
    h3= day_name
    table(class="table")
      thead
        tr
          th(style="width: 20%") Time
          th(style="width: 40%") Event
          th(style="width: 40%") Location
      tbody
        each item in rows
          tr
            td= item.time
            td= item.event
            td= item.loc

